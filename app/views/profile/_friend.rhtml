<li class="friend">
<%= link_to "#{friend.first_name} #{friend.last_name}", :action => 'show', :id => friend %>
<% if session[:user] == @user.id %>
    <%= link_to '[remove]', {:controller => 'profile/friends', :action => 'remove', :id => friend},
        :confirm => "Are you sure you want to remove this friend?" %>
<% end %>
</li>
